<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
  <nav class="navbar">
    <h1>Members-Only</h1>
    <div class="homepage-links">
      <% if(isLoggedIn) { %>
        <a href="/join">Join</a>
        <a href="/logout">Logout</a>
        <% } %>
          <% if(!isLoggedIn) { %>
            <a href="/register">Sign Up</a>
            <a href="/login">Login</a>
            <% } %>
    </div>
  </nav>
  <div class="messages-container">
    <% for(var i=0; i<messages.length; i++) { %>
      <div class="message">
        <h1>
          <%= messages[i].title %>
        </h1>
        <p>
          By: <%= messages[i].author %>
        </p>
        <p>
          Published on: <%= messages[i].formattedTimestamp %>
        </p>
        <p>
          <%= messages[i].content %>
        </p>
      </div>
      <% } %>
  </div>
  <% if(isLoggedIn) { %>
    <h2>Logged In</h2>
    <% } %>
      <% if(!isLoggedIn) { %>
        <h2>Logged Out</h2>
        <% } %>

</body>

</html>